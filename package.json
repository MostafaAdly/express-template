{
  "name": "express-mvc",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/tawreedeg/backend",
  "author": "Tawreed",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "production": "pm2 start 'yarn start' --name 'tawreed-development'",
    "nodemon": "nodemon -e ts --exec",
    "start": "yarn nodemon \"bun run .\"",
    "start:tsx": "yarn nodemon \"tsx .\"",
    "console": "tsx repl/console.ts",
    "console:watch": "yarn nodemon \"tsx repl/console.ts\"",
    "c": "yarn console",
    "cw": "yarn console:watch",
    "prepare": "husky && husky install",
    "deploy": "yarn && yarn docker:deploy",
    "deploy:migration": "yarn && yarn migration:run && yarn docker:deploy",
    "postinstall": "rm -rf package-lock.json",
    "migration:create": "yarn typeorm migration:create",
    "migration:generate": "./scripts/migrate.sh",
    "migration:generate:tsx": "tsx ./node_modules/typeorm/cli.js migration:generate -d ./src/database/typeorm.config.ts ./src/database/migrations/user_create",
    "migration:generate:init": "tsx ./node_modules/typeorm/cli.js migration:generate -- -d ./src/database/typeorm.config.ts ./src/database/migrations/init",
    "migration:run": "tsx ./node_modules/typeorm/cli.js migration:run -d ./src/database/typeorm.config.ts",
    "migration:revert": "tsx ./node_modules/typeorm/cli.js migration:revert -d ./src/database/typeorm.config.ts",
    "migration:show": "tsx ./node_modules/typeorm/cli.js migration:show -d ./src/database/typeorm.config.ts",
    "docker:build": "sudo docker build -t tawreed-development .",
    "docker:remove": "sudo docker rm -f tawreed-development",
    "docker:stop": "sudo docker stop tawreed-development",
    "docker:run": "sudo docker run --net='host' -d -p 5000:5000 --name tawreed-development tawreed-development",
    "docker:restart": "yarn docker:stop ; yarn docker:remove ; yarn docker:run",
    "docker:deploy": "yarn docker:build ; yarn docker:restart",
    "docker:test": "sudo docker exec -it tawreed-development bash"
  },
  "dependencies": {
    "@types/node": "^22.5.5",
    "bcrypt": "^5.1.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.10.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "babel-eslint": "^10.1.0",
    "eslint": "^9.10.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 ."
    ]
  }
}
